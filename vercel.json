{
    "version": 2,
    "builds": [{
            "src": "manage.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "50mb" }
        },
        {
            "src": "staticfiles/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [{
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "manage.py"
        }
    ],
    "build": {
        "env": {
            "DJANGO_SETTINGS_MODULE": "shortener.settings"
        },
        "script": "./build.sh"
    }
}